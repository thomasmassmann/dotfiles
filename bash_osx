# Max OS X specific features.

# Set architecture flags.
export ARCHFLAGS="-arch x86_64 -Wno-error=unused-command-line-argument-hard-error-in-future"

# Add local (homebrew) python 2.7.x, if it exists.
if [ -d /usr/local/share/python ]; then
    export PATH=/usr/local/share/python:$PATH
fi

# Add local (homebrew) python 3.3.x, if it exists.
if [ -d /usr/local/share/python3 ]; then
    export PATH=/usr/local/share/python3:$PATH
fi

# Enable homebrew bash completion.
if [ -f $(brew --prefix)/etc/bash_completion ]; then
  . $(brew --prefix)/etc/bash_completion
fi

# Git bash completion
GIT_COMPLETION=
if [ -f $(brew --prefix)/etc/bash_completion.d/git-completion.bash ]; then
    . $(brew --prefix)/etc/bash_completion.d/git-completion.bash
    GIT_COMPLETION=true
fi

# Mercurial bash completion
if [ -f $HOME/projects/hg-stable/contrib/bash_completion ]; then
    . $HOME/projects/hg-stable/contrib/bash_completion
fi

# Add LaTeX, if it exists.
if [ -d /usr/texbin ]; then
    export PATH=$PATH:/usr/texbin
fi
